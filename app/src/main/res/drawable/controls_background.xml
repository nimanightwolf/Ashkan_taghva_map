<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="#33000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item>
        <shape>
            <solid android:color="#F5F5F5" />
            <corners android:radius="12dp" />

            <!-- Subtle border -->
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />

            <!-- Inner padding -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

    <!-- Optional subtle gradient overlay for depth -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:centerColor="#00FFFFFF"
                android:endColor="#05000000"
                android:startColor="#05FFFFFF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>