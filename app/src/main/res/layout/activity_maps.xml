<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    >




<fragment

    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" />
    <LinearLayout
        android:layout_gravity="left|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <ImageView
            android:id="@+id/find_place"
            android:background="#FFFF"

            android:padding="10dp"
            android:layout_margin="8dp"
            android:src="@drawable/target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/lock_lock"
            android:layout_margin="8dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>




    <TextView

        android:gravity="center"
        android:layout_gravity="left|top"
        android:layout_margin="20dp"
        android:padding="10dp"
    android:text="طول جغرافیایی: \n عرض جغرافیایی:"
    android:id="@+id/tv1"
    android:background="#57BD5B"
    android:textColor="#000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/arm2"

        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:padding="1dp"
        android:text="مرکز اموش توپخانه و موشک های شهید سپهبد صیاد شیرازی"
        android:background="#57BD5B"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>